{
  "$id": "https://example.com/schemas/devops.plan.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DevOps Bootstrap Plan",
  "type": "object",
  "required": ["name", "steps"],
  "properties": {
    "name": { "type": "string" },
    "env": {
      "type": "object",
      "properties": {
        "project": { "type": "string" },
        "repo": { "type": "string" }
      },
      "additionalProperties": true
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "actions"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "when": {
            "type": "object",
            "properties": {
              "os": { "type": "string", "enum": ["macos", "linux", "windows", "wsl"] }
            },
            "additionalProperties": false
          },
          "actions": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "required": ["type", "command"],
                  "properties": {
                    "type": { "const": "run" },
                    "shell": { "type": "string", "enum": ["bash", "powershell"], "default": "bash" },
                    "command": { "type": "string" },
                    "cwd": { "type": "string" }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "path", "content"],
                  "properties": {
                    "type": { "const": "write_file" },
                    "path": { "type": "string" },
                    "content": { "type": "string" },
                    "overwrite": { "type": "boolean", "default": true }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "path"],
                  "properties": {
                    "type": { "const": "mkdir" },
                    "path": { "type": "string" },
                    "parents": { "type": "boolean", "default": true }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "extensions"],
                  "properties": {
                    "type": { "const": "install_extensions" },
                    "extensions": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "message"],
                  "properties": {
                    "type": { "const": "git_commit" },
                    "message": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              ]
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
